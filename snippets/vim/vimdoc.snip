snippet     Slayerp
options     head
abbr        SpaceVimlayerplugins
    function! SpaceVim#layers#`join(split(fnamemodify(substitute(SpaceVim#api#import('file').unify_path(expand('%'), ':.'),'autoload/SpaceVim/layers/','','g'),':r'),'/'),'#')`#plugins() abort
        let plugins = []
        ${1}
        return plugins
    endfunction

snippet     Slayerh
options     head
abbr        SpaceVimlayerhealth
    function! SpaceVim#layers#`join(split(fnamemodify(substitute(SpaceVim#api#import('file').unify_path(expand('%'), ':.'),'autoload/SpaceVim/layers/','','g'),':r'),'/'),'#')`#health() abort
        call SpaceVim#layers#`join(split(fnamemodify(substitute(SpaceVim#api#import('file').unify_path(expand('%'), ':.'),'autoload/SpaceVim/layers/','','g'),':r'),'/'),'#')`#plugins()
        call SpaceVim#layers#`join(split(fnamemodify(substitute(SpaceVim#api#import('file').unify_path(expand('%'), ':.'),'autoload/SpaceVim/layers/','','g'),':r'),'/'),'#')`#config()
        return 1
    endfunction

